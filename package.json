{
  "name": "chrome-vk-comment-blocker",
  "version": "1.0.0",
  "description": "A convenient way to hide comments in the news and groups",
  "scripts": {
    "less": "lessc --clean-css src/styles/main.less extension/styles/main.css",
    "babel": "babel --watch src/scripts -d extension/scripts --presets=es2015",
    "lint": "xo src/**/*"
  },
  "author": "Denis Malinochkin",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "less": "^2.6.1",
    "less-plugin-clean-css": "^1.5.1",
    "xo": "^0.13.0"
  },
  "xo": {
    "space": 2,
    "rules": {
      "arrow-parens": [
        2,
        "always"
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        2,
        "never"
      ]
    },
    "globals": [
      "chrome"
    ],
    "envs": [
      "browser"
    ]
  }
}
