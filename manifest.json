{
  "manifest_version": 2,

  "name": "__MSG_app_name__",
  "short_name": "VKCommentBlocker",
  "description": "__MSG_app_description__",
  "version": "0.7.2",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "ru",

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "__MSG_app_name__",
    "default_popup": "popup.html"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "scripts/storage.js",
      "scripts/background.js"
    ]
  },

  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": [
        "http://vk.com/*",
        "https://vk.com/*",
        "http://www.vk.com/*",
        "https://www.vk.com/*"
       ],
      "css": [ "styles/comment_off.css" ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [ "styles/comment_on.css" ]
}
