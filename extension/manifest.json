{
  "manifest_version": 2,

  "name": "VK Comment Blocker",
  "short_name": "VKCommentBlocker",
  "description": "Удобный способ скрыть комментарии в новостной ленте и группах.",
  "version": "0.5.1",

  "default_locale": "ru",

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "browser_action": {
    "default_icon": "icon_16.png",
    "default_title": "Переключить вид комментариев",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "background": {
    "persistent": true,
    "page": "background.html"
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": [
        "http://vk.com/*",
        "https://vk.com/*"
       ],
      "css": [ "styles/commentblocker.css" ]
    }
  ],

  "web_accessible_resources": [ "styles/commentblocker_on.css" ]
}
