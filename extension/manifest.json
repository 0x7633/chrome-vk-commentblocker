{
  "manifest_version": 2,

  "name": "__MSG_app_name__",
  "short_name": "VKCommentBlocker",
  "description": "__MSG_app_description__",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "ru",

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "persistent": false,
    "scripts": [
      "scripts/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "http://vk.com/*",
        "https://vk.com/*",
        "http://www.vk.com/*",
        "https://www.vk.com/*"
       ],
      "css": [ "styles/main.css" ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
