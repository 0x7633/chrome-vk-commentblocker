{
  "manifest_version": 2,

  "name": "VK Comment Blocker",
  "short_name": "VKCommentBlocker",
  "description": "Show/Hide Vkontakte Comments.",
  "version": "0.1.0",

  "permissions": [ "activeTab" ],

  "browser_action": {
    "default_icon": "icon_16.png",
    "default_title": "Toggle Comments"
  },

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "background": {
    "persistent": false,
    "scripts": [ "commentblocker.js" ]
   },

  "content_scripts": [
    {
      "matches": [ "http://vk.com/*" ],
      "css": [ "commentblocker.min.css" ]
    }
  ],

  "web_accessible_resources": [ "commentblocker_on.min.css" ]
}
